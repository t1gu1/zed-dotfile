// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-s": "workspace::Save",
      "ctrl-alt-cmd-c": "project_panel::CollapseAllEntries",
      // "shift shift": "file_finder::Toggle"
    },
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-a": "editor::SelectAll",
    },
  },
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "space e": "project_panel::ToggleFocus",
      "space E": ["workspace::SendKeystrokes", "space e ctrl-alt-cmd-c"],
      "space t": "terminal_panel::ToggleFocus",
      "space a": "agent::ToggleFocus",
    },
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "escape": "workspace::ToggleLeftDock",
      "ctrl-alt-cmd-o": "menu::Confirm",
      "enter": ["workspace::SendKeystrokes", "ctrl-alt-cmd-o escape"],
    },
  },
  {
    "context": "Terminal",
    "bindings": {
      "escape": "workspace::ToggleBottomDock",
      "ctrl-t": "workspace::NewTerminal",
    },
  },
  {
    "context": "Editor && left_dock == projectpanel && vim_mode == normal",
    "bindings": {
      "escape": "workspace::ToggleLeftDock",
    },
  },
  {
    "context": "AgentPanel > Editor && vim_mode == normal",
    "bindings": {
      "escape": "workspace::ToggleRightDock",
    },
  },
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      // "j k": "vim::NormalBefore"
    },
  },
]
