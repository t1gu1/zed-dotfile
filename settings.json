// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "selection_highlight": true,
  "rounded_selection": true,
  "minimum_contrast_for_highlights": 46.0,
  "agent_buffer_font_size": 21.0,
  "agent_ui_font_size": 25.0,
  "ui_font_weight": 500.0,
  "ui_font_family": "Edit Undo BRK",
  "buffer_font_weight": 550.0,
  "buffer_font_family": "Departure Mono",
  "telemetry": {
    "diagnostics": true,
    "metrics": false,
  },
  "project_panel": {
    "auto_reveal_entries": true,
  },
  "session": {
    "trust_all_worktrees": true,
  },
  "vim_mode": true,
  "icon_theme": "Soft Charmed Icons",
  "ui_font_size": 25.0,
  "buffer_font_size": 21.0,
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "Catppuccin Macchiato",
  },
}
